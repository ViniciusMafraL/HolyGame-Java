                        } else if(confirmar.toUpperCase().charAt(0) == 'R') {
                            System.out.println("Ao passar o dia Math vai testar seu poder em dungeon "
                                    + "e acaba morrendo por falta de experiência de batalha.");
                        }
                        Thread.sleep(1000);
